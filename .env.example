# USDT OBS 抖內系統環境變數配置範例

# Binance API 配置 (必須)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# BSC 網路配置 (備用)
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
USDT_BEP20=0x55d398326f99059fF775485246999027B3197955
RECEIVE_ADDRESS=0x你的BSC錢包地址

# 系統參數
CONFIRMATIONS=12
TIME_WINDOW_MIN=30
TOLERANCE=0.001
MIN_ALERT_AMOUNT=1.00

# 資料庫配置 (可選)
DATABASE_URL=postgresql://username:password@localhost:5432/usdt_obs
DB_HOST=localhost
DB_PORT=5432
DB_NAME=usdt_obs
DB_USER=username
DB_PASS=password

# 服務器配置
PORT=3001
NODE_ENV=development

# CORS 配置
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:8080